{
    "name": "albertemozo/php-kata-skeleton",
    "description": "A simple skeleton for PHP katas",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-docker": "docker run --rm --volume=\"$(pwd)\"/:/kata --workdir=/kata php:8-cli php vendor/bin/phpunit"
    }
}
